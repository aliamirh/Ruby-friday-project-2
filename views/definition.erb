<h2>Definition:</h2> <p><%= @definition.input %></p>
<h3>Word:</h3> <h4><%= @definition.word.input %></h4>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="input">Reword definition</label> <br>
  <input id="input" name="input" type="text" required>

  <button type="submit" class="btn btn-info">Update definition</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-info">Delete definition</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.input %></a>
