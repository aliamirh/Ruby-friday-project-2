<h2>Word Being defined: <%= @word.input %></h2>

<h3>Definitions for <%= @word.input %>:</h3>

<ul>
  <% @word.definitions.each do |definition| %>
  <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.input %></a></li>
  <% end %>
</ul>

<h4>Lets add a definition for <%= @word.input %>!</h4>

<form action="/words/<%= @word.id %>/definitions" method="post">
  <div class="form-group">
    <label for="definition_input">Definition</label>
    <input id="definition_input" name="definition_input" class="form-control" type="text" required>
  </div>
  <button type="submit" class="btn btn-info">Add definition</button>
</form>

<p><a href="/words/<%= @word.id %>/edit">Edit word</a></p>
<p><a href="/">Return to word list</a></p>
