<h1>Update <%= @word.input() %> to another word</h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="input">Change word</label>
  <input id="input" name="input" type="text" required>

  <button type="submit" class="btn btn-info">Update</button>
</form>

<p><a href="/">Return to word list</a></p>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-info">Delete word</button>
</form>
